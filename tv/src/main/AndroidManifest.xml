<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.felkertech.cumulustv">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.RECORD_AUDIO" />

  <uses-feature
      android:name="android.hardware.touchscreen"
      android:required="false" />
  <uses-feature
      android:name="android.software.leanback"
      android:required="true" />

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/Theme.Leanback">


    <activity
        android:name="com.felkertech.cumulustv.activities.LeanbackActivity"
        android:exported="true"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:theme="@style/Theme.Leanback">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
      </intent-filter>
    </activity>


    <activity
        android:name="com.felkertech.cumulustv.activities.DetailsActivity"
        android:theme="@style/Theme.Leanback" />


    <activity
        android:name="com.felkertech.cumulustv.activities.PlaybackQuickSettingsActivity"
        android:enabled="true"
        android:exported="true"
        android:theme="@style/Theme.Panel">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
      </intent-filter>
    </activity>


    <activity android:name="com.felkertech.cumulustv.activities.HomepageWebViewActivity" />

    <activity
        android:name="com.felkertech.cumulustv.activities.TifSetupActivity"
        android:enabled="true"
        android:exported="true" />


    <service
        android:name="com.felkertech.cumulustv.CumulusTvTifService"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:permission="android.permission.BIND_TV_INPUT">
      <!-- Required filter used by the system to launch our account service. -->
      <intent-filter>
        <action android:name="android.media.tv.TvInputService" />
      </intent-filter>
      <meta-data
          android:name="android.media.tv.input"
          android:resource="@xml/tv_service" />
    </service>
  </application>

</manifest>