<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/c_background5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="640dp"
        android:textSize="24sp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginTop="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/intro_title"
        android:text="@string/link_to_m3u"
        android:background="@color/picker_background"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textSize="24sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/edit_url"
        android:hint="@string/m3u_url"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/button_update"
            android:text="@string/update"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/channel_count"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="16dp"
        android:background="@color/picker_background"
        android:textColor="@color/white"
        android:text="A JsonListing is simply a URL which points to an M3U Playlist. Instead of importing the file once, the app will download and import the channels every time."
        android:layout_height="match_parent" />
</LinearLayout>