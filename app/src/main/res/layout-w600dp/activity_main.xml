<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/c_background5"/>

    <Button android:text="@string/manage_add_new" android:layout_width="180dp"
        android:minHeight="60dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_marginTop="80dp"
        style="@style/main_button"
        android:id="@+id/add"/>
    <Button android:text="@string/manage_add_suggested" android:layout_width="180dp"
        android:minHeight="60dp"
        android:layout_height="80dp"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_marginTop="80dp"
        style="@style/main_button"
        android:layout_toRightOf="@id/add"
        android:id="@+id/suggested"/>
    <Button android:text="@string/my_channels" android:layout_width="180dp"
        android:layout_height="wrap_content" android:minHeight="60dp"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        style="@style/main_button"
        android:id="@+id/btn_all_channels"
        android:layout_below="@+id/add" />
    <Button android:text="Categories" android:layout_width="180dp"
        android:layout_height="60dp"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_toRightOf="@id/btn_all_channels"
        android:layout_below="@id/suggested"
        style="@style/main_button"
        android:id="@+id/btn_categories"/>
    <Button android:text="Sync files with Google Drive" android:layout_width="180dp"
        android:minHeight="60dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_below="@+id/btn_all_channels"
        style="@style/main_button"
        android:id="@+id/btn_drive"/>
    <Button android:text="More..." android:layout_width="180dp"
        android:layout_height="60dp"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_toRightOf="@id/btn_drive"
        android:layout_below="@id/btn_categories"
        style="@style/main_button"
        android:id="@+id/btn_more_actions"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artist"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:gravity="end"
        android:layout_marginBottom="45dp"
        style="@style/background_text_art"
        android:text="Background art by Marcelo Franceschini"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/version"
        android:text="Version 1.2.0"
        style="@style/background_text_version"/>
</RelativeLayout>